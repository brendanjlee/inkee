{
  "database": {
    "rules": "firebase_config/realtime.rules"
  },
  "firestore": {
    "rules": "firebase_config/firestore.rules",
    "indexes": "firebase_config/firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "firebase_config/storage.rules"
  }
}
